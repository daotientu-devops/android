<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateActivity">

    <EditText
        android:id="@+id/noidung_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#e8e5ea"
        android:gravity="top"
        android:lines="10"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ok_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0px"
        android:layout_marginEnd="0px"
        android:layout_marginRight="0px"
        android:text="Save"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="@id/noidung_edit"
        app:layout_constraintRight_toRightOf="@id/noidung_edit"
        app:layout_constraintTop_toBottomOf="@+id/noidung_edit"
        tools:visibility="visible" />

</LinearLayout>